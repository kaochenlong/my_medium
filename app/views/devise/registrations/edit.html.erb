<h2 class="title">個人資料</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username, '使用者帳號' %><br />
    <div class="control">
      <%= f.text_field :username, class: 'input is-medium' %>
    </div>
    <p class="help">範例：@eddiekao</p>
  </div>

  <div class="field">
    <%= f.label :avatar, '大頭照' %><br />
    <div class="control">
      <%= f.file_field :avatar %>
    </div>
    <%= avatar(current_user) %>
  </div>

  <div class="field">
    <%= f.label :intro, '個人簡介' %><br />
    <div class="control">
      <%= f.text_area :intro, class: 'textarea is-medium', rows: 5%>
    </div>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <div class="control">
      <%= f.email_field :email, autocomplete: "email", class: 'input is-medium' %>
    </div>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <div class="control">
      <%= f.password_field :password, autocomplete: "new-password", class: 'input is-medium' %>
      <% if @minimum_password_length %>
        <br />
        <em><%= @minimum_password_length %> characters minimum</em>
      <% end %>
    </div>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <div class="control">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input is-medium' %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: 'button is-primary is-medium' %>
  </div>
<% end %>

<%= link_to "Back", :back, class: 'button' %>
